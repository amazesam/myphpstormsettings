<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="HTML" injector-id="xml">
      <display-name>Layui</display-name>
      <value-pattern>lay-.*</value-pattern>
      <place><![CDATA[xmlAttribute().withLocalName(string().matches("lay.*"))]]></place>
    </injection>
  </component>
</application>